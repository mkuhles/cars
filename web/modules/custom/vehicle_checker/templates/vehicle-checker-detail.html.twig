<div class="vehicle-checker-detail">
  <h2>{{ node.title.value }}</h2>
  {% if node.hasField('field_release_date') and node.field_release_date.value %}
    <p>Release Date: {{ node.field_release_date.value|date('d.m.Y') }}</p>
  {% endif %}
  {% if release_year %}
    <p>Release Year: {{ release_year }}</p>
  {% endif %}
  {% if node.hasField('field_price') and node.field_price.value is not empty %}
    <p>Price: {{ node.field_price.value|number_format(2, ',', '.') }} EUR</p>
  {% endif %}
</div>
